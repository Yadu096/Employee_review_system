<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>


<div class="card mx-auto text-bg-light m-3 p-3" style="width: 60%;">
    <div class="card-header">
        <h4 class="card-title">Assign <strong><%= emp1.name %></strong> for performance review to: </h4>
    </div>
    <div class="card-body">
        <ul class="list-group list-group-flush">
            <% for(let emp of emps){%>
                <% if(emp.id == emp1.id){%>
                    <% continue %>
                <%} %>
                <li class="list-group-item">
                    <%= emp.name %>
                    <a href="/performance/add-for-review?addIn=<%= emp._id %>&addEmp=<%= emp1._id %>" class="btn btn-light" style="position: absolute; right: 10px; top: 1px"> Select </a>
                </li>
            <%} %>
            
        </ul>
    </div>
</div>