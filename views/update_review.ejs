<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

<div class="card text-bg-light  m-3 mx-auto" style="width: 550px;">
    <form action="/performance/update-review/<%= id %>" method="post" style="display: inline-flex;">
        <div class="card-body">
            <h5 class="card-title text-center">Update performance review </h5>
            <div class="form-group mb-3">
                <label for="floatingInput">Rating on an scale of 0 to 5</label>
                <input type="number" min="0" max="5" class="form-control" id="floatingInput" name="rating" required>
            </div>
            <div class="form-group mb-3">
                <label for="feedback">Feedback</label>
                <textarea class="form-control" name="feedback" id="feedback" cols="58" rows="10"></textarea>    
            </div>              
            <div>
                <button type="submit" class="btn btn-light">Update</button>
            </div>
        </div>
    </form>
</div>
