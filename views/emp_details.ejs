<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>


<div class="card mx-auto text-bg-light m-3 p-3" style="width: 60%;">
    <div class="card-header">
        <h4 class="card-title">Personal details:</h4>
    </div>
    <div class="card-body">
        <ul class="list-group list-group-flush">
            <li class="list-group-item"><strong>Name: </strong> <%= emp.name %></li>
            <li class="list-group-item"><strong>Date of birth: </strong> <%= new Intl.DateTimeFormat('en-GB', { year: 'numeric', month: 'long', day: '2-digit'}).format(emp.DOB) %></li>
            <li class="list-group-item"><strong>Gender: </strong> <%= emp.gender %></li>
            <li class="list-group-item"><strong>Employee ID: </strong> <%= emp.emp_ID %></li>
            <li class="list-group-item"><strong>Department: </strong> <%= emp.department %></li>
            <li class="list-group-item"><strong>Date of joining: </strong> <%= new Intl.DateTimeFormat('en-GB', { year: 'numeric', month: 'long', day: '2-digit'}).format(emp.DOJ) %></li>
            <li class="list-group-item">
                <a href="/emp-details/remove-emp/<%= emp._id %>" class="btn btn-light">Remove</a>
                <a href="/emp-details/update-emp-page/<%= emp._id %>" class="btn btn-light">Update</a>
                <a href="/emp-details/review-assign-page/<%= emp._id %>" class="btn btn-light">Assign for review</a>
                <a href="/emp-details/make-admin/<%= emp._id %>" class="btn btn-light">Make admin</a>
            </li>
        </ul>
    </div>
</div>

<div class="card mx-auto text-bg-light m-3 p-3" style="width: 60%;">
    <div class="card-header">
        <h4 class="card-title">Performance review: </h4>
    </div>
    <div class="card-body">
        <ul class="list-group list-group-flush">
            <% if(emp.performance_review != undefined){%>
                <li class="list-group-item"><strong>Rating: </strong> <%= emp.performance_review.rating %></li>
                <li class="list-group-item"><strong>Feedback: </strong> <%= emp.performance_review.feedback %></li>
                <li class="list-group-item">
                    <a href="/performance/update-page/<%= emp.performance_review._id %>" class="btn btn-light">Update review</a>
                </li>
            <%} %>
        </ul>
    </div>
</div>